pipeline{
    agent any

    stages{
        stage("clean-ws"){
            steps{
                script {
                    cleanWs()
                }
            }
        }
        stage("clone-repo"){
            steps{
                script {
                    sh """
                    echo clone repo
                    """
                }
            }
        }
        stage("create-plan"){
            steps{
                script {
                    sh """
                    echo terraform plan
                    """
                }
            }
        }
        stage("Trigger notification"){
            steps{
                script {
                    sh """
                    echo Slack notification
                    """
                }
            }
        }
        stage("Remove plan"){
            steps{
                script{
                    sh """echo cleaning"""
                }
            }
        }
    }
}